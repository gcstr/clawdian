{
	"name": "clawdian",
	"version": "0.1.0",
	"description": "Obsidian plugin for OpenClaw Gateway connectivity",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "node esbuild.config.mjs production",
		"test": "node --experimental-strip-types --loader ./test/obsidian-loader.mjs --test \"test/**/*.test.ts\"",
		"test:watch": "node --experimental-strip-types --loader ./test/obsidian-loader.mjs --test --watch \"test/**/*.test.ts\""
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"builtin-modules": "^4.0.0",
		"esbuild": "^0.24.0",
		"obsidian": "latest",
		"typescript": "^5.7.0"
	}
}
